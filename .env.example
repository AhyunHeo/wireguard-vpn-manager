# WireGuard VPN Manager Configuration
# Copy this file to .env and adjust the values

# Server Configuration
# ===================

# External server URL or IP (use 'auto' for automatic detection)
# For production: Your public IP or domain
# For local testing: Your local IP
SERVERURL=auto

# Local network IP for same-network clients
# This is used when clients connect from the same local network
LOCAL_SERVER_IP=192.168.0.68

# Server port
SERVERPORT=51820

# Network Configuration
# =====================

# VPN subnet configuration
INTERNAL_SUBNET=10.100.0.0/16
ALLOWED_IPS=10.100.0.0/16

# DNS servers for VPN clients
PEERDNS=8.8.8.8,8.8.4.4

# API Configuration
# =================

# API authentication token
API_TOKEN=test-token-123

# Central Server Configuration
# ============================

# Central server URL that worker nodes will connect to
# This should be the public URL of your central server
CENTRAL_SERVER_URL=http://192.168.0.88:8000

# Database Configuration
# ======================

# PostgreSQL connection
DATABASE_URL=postgresql://vpn:vpnpass@postgres:5432/vpndb

# Container Configuration
# =======================

# Time zone
TZ=Asia/Seoul

# User/Group IDs for file permissions
PUID=1000
PGID=1000

# Dashboard Configuration
# =======================

# Dashboard secret key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Logging
# =======

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO